{
  "name": "axam-ordenes-de-compras",
  "version": "2.0.0",
  "description": "Sistema para mapear productos y calcular ventas mensuales desde FAVEs de Manager+",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "node server.js",
    "dev:client": "cd client && npm run dev -- -p 3001",
    "build": "cd client && npm run build",
    "start": "NODE_ENV=production node server.js",
    "sync:productos": "node scripts/syncProductos.js",
    "sync:ventas": "node scripts/syncVentas.js",
    "sync:ventas:actuales": "node scripts/syncVentasActuales.js",
    "sync:stock": "node scripts/actualizarStock.js",
    "sync:daily": "node scripts/syncDaily.js daily",
    "sync:init": "node scripts/syncDaily.js init",
    "init:db": "node scripts/initDatabase.js",
    "consultar": "node scripts/consultarVentas.js",
    "test:fave": "node scripts/testFAVE.js",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "migrar:prisma": "node scripts/migrarABasePrisma.js",
    "postinstall": "cd client && npm install",
    "docker:build": "docker build -t axam-dashboard .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "manager",
    "fave",
    "ventas",
    "productos"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "axios": "^1.6.0",
    "better-sqlite3": "^9.2.2",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "dotenv": "^16.3.1",
    "express": "^5.2.1",
    "node-cron": "^4.2.1",
    "prisma": "^5.22.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
